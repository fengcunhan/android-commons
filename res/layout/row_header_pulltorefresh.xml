<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <ProgressBar
        android:id="@+id/row_header_pulltorefresh_progressbar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:indeterminateOnly="true"/>
    <ImageView
        android:id="@+id/row_header_pulltorefresh_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/row_header_pulltorefresh_progressbar"
        android:layout_alignLeft="@id/row_header_pulltorefresh_progressbar"
        android:layout_alignRight="@id/row_header_pulltorefresh_progressbar"
        android:layout_alignTop="@id/row_header_pulltorefresh_progressbar"
        android:src="@drawable/ic_pulltorefresh_arrow"/>
    <TextView
        android:id="@+id/row_header_pulltorefresh_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/row_header_pulltorefresh_progressbar"
        android:layout_alignTop="@id/row_header_pulltorefresh_progressbar"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="@string/row_header_pulltorefresh_pullDown"
        android:textStyle="bold"/>
</RelativeLayout>